doctype html
html
  body
    p = @article.category
    div.jumbotron.jumbotron-fluid
      h1.display-4.center = @article.title
    div
    p.lead = @article.content
    = image_tag @article.screenshot

    - if logged_in?(:editor) && @article.user_id == current_user.id
      = button_to "Edit", { action: "edit", id: @article.id }, method: :get, class: "btn btn-secondary"
      br
      = button_to "Delete", { action: "destroy", id: @article.id }, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"
